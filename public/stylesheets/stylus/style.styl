body
  padding: 40px
  background: url('../images/noise.png'), #2f2f30

#content
  width: 1024px
  margin: 0 auto
header h1
  margin-bottom: 18px
  font-size: 30px
  line-height: 84px
  background-image: URL('../images/title.png')
  background-repeat: no-repeat
  overflow: hidden
  text-indent: -9999px

#neck
  display: table
  padding: 8px

ul,ol
  margin: 0
  padding: 0

ul.string
  dispay: table-row

#neck li
  transition: all 1s ease 0s
  display: table-cell
  width: 60px
  height: 60px
  text-align: center
  vertical-align: middle
  border-radius: 50px
  box-shadow: 0px 0px 5px rgba(255,255,255,0.5) inset
  color:white

#neck li.inactive
  color: rgba(255,255,255,0.3)

